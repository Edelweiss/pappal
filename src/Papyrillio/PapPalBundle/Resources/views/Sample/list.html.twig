{% extends '::base.html.twig' %}
{% block body %}
  {% include 'PapyrillioPapPalBundle:Sample:filterForm.html.twig' with {'filterForm': filterForm, 'template': template, 'templateOptions': templateOptions, 'sort': sort, 'sortOptions': sortOptions, 'sortDirections': sortDirections} %}
  
  <br />

  {% for sample in samples %}
    <div class="sample">
      <a href="{{ path('PapyrillioPapPalBundle_SampleShow', {id: sample.id}) }}"><img src="{{ asset('thumbnail/placeholder.gif') }}" data-original="{{ asset(sample.thumbnail) }}" class="lazy" title="&lt;span class=&quot;keyword&quot;&gt;{{ sample.title != 'keiner' ? sample.title : '...' }}&lt;/span&gt; &lt;br/&gt; {{ sample.dateHgvFormat }} &lt;br/&gt; {{ sample.provenance }} &lt;br/&gt; {{ sample.material }}, {{ sample.keywords }} &lt;br/&gt; DDB {{ sample.ddb }} / HGV {{ sample.hgv }}" /></a>
      <br />
      <span class="date">{{ sample.dateHgvFormat }}</span>,
      <span class="provenance">{{ sample.provenance }}</span> -
      <span clas="title">{{ sample.title }}</span>
    </div>
  {% endfor %}

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  
  <script src="{{ asset('js/jquery/jquery-tipTip.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('js/jquery/jquery-lazyload.min.js') }}" type="text/javascript"></script>
  <script type="text/javascript">
    $(document).ready(function(){
      $('img.lazy').lazyload();
      $('img[title]').tipTip({});
    });
  </script>
{% endblock %}