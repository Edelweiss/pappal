{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/gallery.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
  {% include 'PapyrillioPapPalBundle:Sample:filterForm.html.twig' with {'filterForm': filterForm, 'sortOptions': sortOptions, 'sortDirections': sortDirections} %}

    <div id="slider">
      <div>
        <div class="floating">
          <img id="butleft" src="{{ asset('images/eo/left.png') }}" alt="" />
        </div>
        <div class="floating">
          <ul class="clearfix">

            {% for sample in samples %}
              <li id="sample{{ sample.id }}" style="display: none; width: 0; height: 0;">
                <a href="{{ path('PapyrillioPapPalBundle_SampleShow', {id: sample.id}) }}" imtitle" title="{{ sample.title }}">{{ sample.title }}</a>
                <a href="{{ asset(sample.thumbnail) }}" title="{{ sample.title }}"><img src="{{ asset('thumbnail/placeholder.gif') }}" data-original="{{ asset(sample.thumbnail) }}" alt="" /></a>
              </li>
            {% endfor %}

          </ul>
        </div>
        <div class="floating">
          <img id="butright" src="{{ asset('images/eo/right.png') }}" alt="" />
        </div>
      </div>
      <div class="clear"></div>
    </div>
    <div id="texts">
      {% for sample in samples %}
        <div id="text{{ sample.id }}" class="text" style="display: none;">
          <span clas="title">{{ sample.title }}</span><br />
          <span class="date">{{ sample.dateHgvFormat }}</span>,
          <span class="provenance">{{ sample.provenance }}</span>
        </div>
      {% endfor %}
    </div>

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('js/gallery.js') }}" type="text/javascript"></script>
  <script type="text/javascript">
    $(document).ready(function(){
    });
  </script>
{% endblock %}