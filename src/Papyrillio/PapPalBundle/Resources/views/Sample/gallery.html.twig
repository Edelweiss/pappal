{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/gallery.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}

  {% include 'PapyrillioPapPalBundle:Sample:filterForm.html.twig' with {'filterForm': filterForm, 'template': template, 'templateOptions': templateOptions, 'sort': sort, 'sortOptions': sortOptions, 'sortDirections': sortDirections} %}
  
  <br />

  <div id="count">
    <img id="butleft" class="controlButton" src="{{ asset('images/arrowL.png') }}" alt="" />
    <span id="number">{{ samples | length ? 1 : 0 }}</span><span>/{{ samples | length }}</span>
    <img id="butright" class="controlButton" src="{{ asset('images/arrowR.png') }}" alt="" />
  </div>
  <div id="slider">
    <div>

      <div class="floating">
        <ul class="clearfix">

          {% for sample in samples %}
            <li id="sample{{ sample.id }}">
              <span class="imtitle">{{ sample.title }}</span>
              <a href="{{ path('PapyrillioPapPalBundle_SampleShow', {id: sample.id}) }}" title="{{ sample.title }}"><img src="{{ asset('thumbnail/placeholder.gif') }}" data-original="{{ asset(sample.thumbnail) }}" alt="" /></a>
            </li>
          {% endfor %}

        </ul>
      </div>

    </div>
    <div class="clear"></div>
  </div>
  <div id="texts">
    {% for sample in samples %}
      <div id="text{{ sample.id }}" class="text"><span>{{ sample.title != 'keiner' ? sample.title : '...' }}</span><br />{{ sample.dateHgvFormat }} - {{ sample.provenance }}<br />{{ sample.material }}, {{ sample.keywords }}<br />DDB {{ sample.ddb }} / HGV {{ sample.hgv }}</div>
    {% endfor %}
  </div>

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('js/gallery.js') }}" type="text/javascript"></script>
  <script src="{{ asset('js/sampleFilterForm.js') }}" type="text/javascript"></script>
  <script type="text/javascript">
    $(document).ready(function(){
    });
  </script>
{% endblock %}