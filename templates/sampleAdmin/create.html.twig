{% extends 'base.html.twig' %}

{% block body %}

{% if error %}
  <div class="ui-widget">
    <div style="margin-top: 20px; padding: 0 .7em;" class="ui-state-error ui-corner-all"> 
      <p><span style="float: left; margin-right: .3em;" class="ui-icon ui-icon-info"></span>
      <strong>Alert:</strong> {{ error }}</p>
    </div>
  </div>
  <div class="clear"></div><br /><br />
{% endif %}

{{ form(createForm) }}

<p>(uploading an image is optional, only necessary if HGV record doesn't contain link to online ressource or if online archive cannot be harvested, as is the case for ONB)</p>

{% endblock %}