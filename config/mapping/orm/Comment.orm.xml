<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="App\Entity\Comment" table="comment">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>
        <field name="postingDate" type="datetime"/>
        <field name="post" type="text"/>
        <many-to-one field="sample" target-entity="Sample" inversed-by="comments">
            <join-column name="sample_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
        </many-to-one>
        <many-to-one field="user" target-entity="User" inversed-by="comments">
            <join-column name="user_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>